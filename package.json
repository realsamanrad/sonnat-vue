{
  "name": "sonnat-vue",
  "version": "0.0.10",
  "description": "Vue component library using Sonnat Design System to build faster, elegant, and accessible web applications",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "format": "prettier --write src/"
  },
  "main": "./dist/sonnat-vue.umd.cjs",
  "module": "./dist/sonnat-vue.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/sonnat-vue.es.js",
      "require": "./dist/sonnat-vue.umd.cjs"
    },
    "./style.css": "./dist/sonnat-vue.css"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.6",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.22.0",
    "eslint-plugin-vue": "~10.0.0",
    "jiti": "^2.4.2",
    "npm-run-all2": "^7.0.2",
    "prettier": "3.5.3",
    "tailwindcss": "^4.1.6",
    "typescript": "~5.8.0",
    "vite": "^6.2.4",
    "vite-plugin-dts": "^3.7.0",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vue-tsc": "^2.2.8",
    "vite-plugin-svg4vue": "^4.5.0"
  },
  "peerDependencies": {
    "@floating-ui/vue": "^1.1.6",
    "@vueuse/core": "^13.2.0",
    "@vueuse/motion": "^3.0.3",
    "vue": "^3.5.14"
  },
  "keywords": [
    "vue",
    "vue3",
    "ui",
    "sonnat",
    "sonnat-ui"
  ],
  "author": "Saman Rad <rad@saman.my>",
  "homepage": "https://github.com/realsamanrad/sonnat-vue",
  "repository": "https://github.com/realsamanrad/sonnat-vue",
  "bugs": {
    "url": "https://github.com/realsamanrad/sonnat-vue/issues"
  },
  "license": "MIT"
}
